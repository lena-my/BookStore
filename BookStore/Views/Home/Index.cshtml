@model List<BookStore.Models.Entities.Book>

@{
    ViewData["Title"] = "Book Store";
}

<div>
    <h1>Book Store</h1>
    
    <h2>List of books</h2>
    <table class="table table-hover .table-borderless">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
        </tr>

        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author.Name</td>
                <td>@book.Price</td>
            </tr>
        }
    </table>
</div>